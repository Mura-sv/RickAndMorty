<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.episode_detail.EpisodeDetail">


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/characterDetail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="200dp"
            android:id="@+id/name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Name of the episode"
            android:textColor="@color/black"
            android:textSize="22sp" />



        <TextView
            android:id="@+id/numberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="100dp"
            android:gravity="start"
            android:paddingHorizontal="15dp"
            android:text="Episode: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/numberView"
            android:layout_alignTop="@id/numberView"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/numberView"
            android:paddingHorizontal="15dp"
            android:text="Episode number"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/airdateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numberView"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:paddingHorizontal="15dp"
            android:text="Air date: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/air_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/number"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/airdateView"
            android:layout_toEndOf="@+id/numberView"
            android:paddingHorizontal="15dp"
            android:text="air date"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/createdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/airdateView"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:paddingHorizontal="15dp"
            android:text="Created: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/air_date"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/numberView"
            android:paddingHorizontal="15dp"
            android:text="created"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>